<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.FriendsController">
   <children>
      <Text fill="#1b28da" layoutX="135.0" layoutY="71.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Friend Requests" textAlignment="CENTER">
         <font>
            <Font size="37.0" />
         </font>
      </Text>
      <ListView fx:id="listView" layoutX="131.0" layoutY="96.0" onMouseClicked="#listViewSelectedUser" prefHeight="228.0" prefWidth="258.0" />
