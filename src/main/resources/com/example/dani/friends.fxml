      <Text fx:id="selectedUser" layoutX="433.0" layoutY="115.0" strokeType="OUTSIDE" strokeWidth="0.0" />
      <Button fx:id="declineButton" layoutX="418.0" layoutY="175.0" mnemonicParsing="false" onAction="#declineButtonOnAction" prefHeight="26.0" prefWidth="64.0" text="Decline">
         <font>
            <Font size="12.0" />
         </font>
      </Button>
      <ImageView fitHeight="77.0" fitWidth="82.0" layoutX="26.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@friends.jpeg" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
